## Reload the configuration file
bindsym $mod+Shift+c reload

## Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+q restart
# bindsym $mod+q exec --no-startup-id i3-nagbar -t warning -m 'Restart i3-wm' -b 'Yes' 'i3-msg restart'

## Exit i3 (logs you out of your X session)
# bindsym $mod+Shift+q exit
# bindsym $mod+Shift+q exec --no-startup-id "i3-nagbar -f $font -t warning -m 'Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# bindsym $mod+Shift+q exec --no-startup-id "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+q exec --no-startup-id ~/.i3/exit.sh message

## System mode menu
bindsym $mod+Shift+x mode "$mode_system"
set $mode_system System (l) lock, (o) monitor off, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (x) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.i3/exit.sh lock, mode "default"
    bindsym o exec --no-startup-id ~/.i3/exit.sh monitor_off, mode "default"
    bindsym e exec --no-startup-id ~/.i3/exit.sh logout, mode "default"
    bindsym s exec --no-startup-id ~/.i3/exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id ~/.i3/exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id ~/.i3/exit.sh reboot, mode "default"
    bindsym x exec --no-startup-id ~/.i3/exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## Scratchpad
# scratchpad show
bindsym $mod+minus scratchpad show

