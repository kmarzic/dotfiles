## CLIENT KEYBINDINGS
################################################################################

## Kill focused window
bindsym $mod+F4 kill
bindsym $mod+c kill

## Change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Split in horizontal orientation
# bindsym $mod+h split h
bindsym $mod+h split horizontal

## Split in vertical orientation
# bindsym $mod+v split v
bindsym $mod+v split vertical

## Split toggle
# bindsym $mod+t split t
bindsym $mod+t split toggle

## Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

## Change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default
bindsym $mod+space layout toggle splitv splith tabbed stacking

## Focus the child container
# bindsym $mod+d focus child

## Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

## Change focus between tiling / floating windows
bindsym $mod+shift+g focus mode_toggle

## Focus the parent container
bindsym $mod+a focus parent

# Focus the output right to the current one
bindsym $mod+shift+e focus output right

# Focus the big output
bindsym $mod+shift+r focus output left

# Focus the primary output
bindsym $mod+shift+w focus output primary

## Resize window (you can also use the mouse for that)
mode "resize" {
    ## These bindings trigger as soon as you enter the resize mode
    bindsym j           resize shrink width 10 px or 10 ppt
    bindsym k           resize grow height 10 px or 10 ppt
    bindsym l           resize shrink height 10 px or 10 ppt
    bindsym semicolon   resize grow width 10 px or 10 ppt

    ## same bindings, but for the arrow keys
    bindsym Left        resize shrink width 10 px or 10 ppt
    bindsym Down        resize grow height 10 px or 10 ppt
    bindsym Up          resize shrink height 10 px or 10 ppt
    bindsym Right       resize grow width 10 px or 10 ppt

    ## back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "pass-through" {
    bindsym $mod+g mode "default"
}

bindsym $mod+g mode "pass-through"

## Client border switching
# bindsym $mod+t border normal
# bindsym $mod+y border 1pixel
# bindsym $mod+u border none
# bindsym $mod+b border toggle

## The following key binding lets you switch back and forth between the last
## two workspaces that you visited pressing the $mod+z key combination.
bindsym $mod+z workspace back_and_forth
## move a window backwards and forwards and follow it.
bindsym $mod+Shift+z move container to workspace back_and_forth

## Mark Window
## mark window by name
bindsym $mod+m exec --no-startup-id i3-input -F 'mark %s' -P 'Mark name: '
## search window by name
bindsym $mod+Shift+m exec --no-startup-id i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '


################################################################################
## i3bar
################################################################################

## Start i3bar to display a workspace bar (plus the system information i3status
## finds out, if available)
bar {
    ## i3bar command
    # i3bar_command /home/user/bin/i3bar

    ## Statusline command
    # status_command <command>
    # status_command i3status
    status_command i3status --config ~/.i3status.conf

    ## Display mode
    mode dock
    # mode hide
    # mode invisible

    ## Hidden state
    # hidden_state hide
    hidden_state show

    ## Modifier
    # modifier <Modifier>|none

    ## Bar ID
    # id <bar_id>

    ## Position
    # position top
    position bottom

    ## Output (restrict i3bar)
    # output $screen_laptop
    # output $screen_monitor_1
    # output $screen_monitor_2
    # output primary

    ## Tray Output
    # tray_output $screen_laptop
    # tray_output $screen_monitor_1
    # tray_output $screen_monitor_2
    # tray_output primary
    # tray_output none

    ## Tray padding
    tray_padding 0

    ## Font
    # font xft:DejaVu Sans Mono 10
    # font -misc-fixed-bold-r-normal--13-120-75-75-c-70-iso10646-1
    # font $font
    font $font_bar

    ## Separator Symbol
    # separator_symbol ":|:"
    separator_symbol "|"

    ## Workspace buttons
    workspace_buttons yes
    # workspace_buttons no

    ## Strip workspace numbers
    strip_workspace_numbers yes
    # strip_workspace_numbers no

    ## Binding Mode indicator
    binding_mode_indicator yes
    binding_mode_indicator no

    ## Colors
    colors {
        ## Default
        ## class                border backgr.text indicator
        # background            #000000
        # statusline            #ffffff
        # separator             #666666
        # focused_workspace     #4c7899 #285577 #ffffff
        # active_workspace      #333333 #5f676a #ffffff
        # inactive_workspace    #333333 #222222 #888888
        # urgent_workspace      #2f343a #900000 #ffffff
        #
        ## Solarized Light / Dark
        background $base00
        separator  $base01
        statusline $base04
        # State             Border  BG      Text
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base00 $base0A $base00
    }
}

