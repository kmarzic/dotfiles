"#### vimrc
set nocompatible
filetype indent on
filetype plugin on
set background=dark
syntax on
set autoindent
set smartindent
set nostartofline
set formatoptions=tcrqv
set backspace=2
set laststatus=2
set ruler
set statusline=[%F%m%r%h%w][%L][%{&ff}]%y[%p%%][%04l,%04v]
set wildmenu
set splitbelow
set showcmd
set shortmess=aOstT
set visualbell
set visualbell t_vb=
set noerrorbells
set esckeys
set expandtab
set ignorecase
set smartcase
set hlsearch
set showmatch
set nobackup
" set number
set digraph
set comments=b:#,:%,n:>
set paste
set ttyfast
"#### end
